

let txt="GGGGGG";
let font;


function setup(){
  createCanvas(1044, 560);
  
  background(255);  
  fill(0);
  noStroke();
  
  textFont("Helvetica");
  textSize(450);

  textAlign(CENTER, CENTER);
  text(txt, width / 2 - 13, height / 2 - 56);
}

function draw(){
  fill(255);
  let s = random(80);
  ellipse(random(width), random(height), s, s);
}
