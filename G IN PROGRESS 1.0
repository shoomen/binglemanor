function setup() {

  createCanvas(600, 500);
  background(240);

  const w = width * 0.4;
  const h = width * 0.25;

  noStroke();
  fill(34);
  translate((width/2) - (w/2), height/1.5);

  beginShape();
  vertex(-90, 5);
  vertex(0, h);
  vertex(w, h);
  vertex(w, 0);
  vertex(w/2, -h);
  endShape();

  noLoop();
}
