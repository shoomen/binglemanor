function setup() {

  createCanvas(600, 500);
  background(240);

  const w = width * 0.9;
  const h = width * 0.75;

  noFill();
  stroke(30);
  strokeCap(SQUARE);
  strokeWeight(width * 0.07);
  translate((width/2) - (w/2), (height/2) - (h/2));
  beginShape();
  vertex(100, 100)
  vertex(w, h/5);
  vertex(45, 300)
  vertex(0, h/4);
  vertex(40, 40);
  vertex(90, 80)
  endShape();

  noLoop();
}
